# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Database Configuration
# SQLite for development
SQLALCHEMY_DATABASE_URI=sqlite:///instance/expenses.db
# PostgreSQL for production
# SQLALCHEMY_DATABASE_URI=postgresql://username:password@host:port/database

# Application Mode
DEVELOPMENT_MODE=False
DISABLE_SIGNUPS=False

# Development User Credentials (for development mode only)
DEV_USER_EMAIL=dev@example.com
DEV_USER_PASSWORD=dev_password

# Logging Configuration
LOG_LEVEL=INFO

# Debug Mode
DEBUG=False

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=Dollar Dollar Bill App <your_email@gmail.com>

# Production Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=dollardollar